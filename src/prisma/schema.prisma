    generator client {
        provider = "prisma-client-js"
    }

    datasource db {
        provider = "mongodb"
        url      = env("MONGODB_URI")
    }

    model AdminEdit {
        id       String @id @default(uuid()) @map("_id")
        email    String @unique
        password String
    }

    model Lotion {
        id            String      @id @default(uuid()) @map("_id")
        name          String      @unique
        images        String[]
        price         String
        genre         GenreLotion
        brand         String
        stock         Int         @default(0)
        chords        String[]
        isDiscount    Boolean     @default(false)
        discountPrice String?
        discountStart DateTime?
        discountEnd   DateTime?
        created_at    DateTime    @default(now())
    }

    enum GenreLotion {
        men
        girl
        mix
        all
    }
